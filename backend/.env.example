# FastAPI后端配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 基础配置
DEBUG=True
SECRET_KEY=xiaoyuweihan_secret_key_2025_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
